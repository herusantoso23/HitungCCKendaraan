<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity" >
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
        
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
	        android:layout_marginBottom="10dp"
	        android:gravity="center"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Hitung CC Kendaraan"/>
    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Diameter Silinder"/>
	    
	    <EditText
	        android:inputType="numberDecimal" 
	        android:id="@+id/diameter"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Langkah kerja / Stroke Engine"/>
	    
	    <EditText 
	        android:inputType="numberDecimal"
	        android:id="@+id/langkahKerja"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Jumlah Silinder"/>
	    
	    <EditText
	        android:inputType="numberDecimal"
	        android:id="@+id/jumlahSilinder"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        />
	    
	    <Button
	        android:layout_marginTop="10dp"
	        android:id="@+id/hitung" 
	        android:text="Hitung CC"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	    
	    <Button
	        android:layout_marginBottom="10dp"
	        android:id="@+id/reset" 
	        android:text="Reset"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Hasil CC Volume"/>
	    
	    <EditText 
	        android:editable="false"
	        android:id="@+id/hasil"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        />
    </LinearLayout>
</ScrollView>
